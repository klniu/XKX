<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@mipmap/img_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_shakeshake"
        android:layout_marginTop="40dp"
        android:src="@mipmap/img_shakeshake"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_shake"
        android:background="@mipmap/img_shake"
        android:layout_below="@+id/img_shakeshake"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn_select_scenic"
        android:layout_below="@+id/img_shake"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_select_scenic"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgBtn_select_scenic"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="false"
        android:paddingTop="36dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imgBtn_service"
            android:layout_alignLeft="@+id/imgBtn_select_scenic"
            android:layout_alignStart="@+id/imgBtn_select_scenic"
            android:layout_toLeftOf="@+id/imgBtn_service"
            android:layout_toStartOf="@+id/imgBtn_service"
            android:layout_alignTop="@+id/imgBtn_service"
            android:gravity="center_vertical"
            android:layout_marginLeft="46dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtn_photo"
                android:background="@drawable/selector_photo"
                android:visibility="invisible" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtn_massage"
                android:background="@drawable/selector_massage"
                android:visibility="invisible"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtn_service"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/img_service"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

</RelativeLayout>
